@page
@model Hexed_Relics.Pages.Banking.WithdrawalModel
@{
    ViewData["Title"] = "Withdraw/Transfer";
}

@if (Model.Message != "")
{
    <div class="container col-lg-9  col-md-12 mt-5 align-content-center">
        <div class="alert alert-danger mt-5" style="border-radius: 20px;">
            <div class="row">
                <div class="container col-3 " align="center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                    </svg>
                </div>
                <div class="container col-9">
                    <strong>@Model.Message</strong>
                </div>
            </div>
       </div>
    </div>
}

<div class="row mt-5 mb-3" align="center">
    <h1>Withdraw or Transfer</h1>
</div>

<div class="container col-lg-8 col-md-10">
    <div class="row">
        <div class="col-lg-6">
           <div class="btn-group" role="group">
              <input type="radio" class="btn-check" name="btnradio" id="withdraw" autocomplete="off" checked>
              <label class="btn btn-outline-primary" for="withdraw">Withdraw</label>

              <input type="radio" class="btn-check" name="btnradio" id="transfer" autocomplete="off">
              <label class="btn btn-outline-primary" for="transfer">Transfer</label>
            </div>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mt-2">
                    <label asp-for="Amount" class="control-label">Amount</label>
                    <input asp-for="Amount" class="form-control" type="number" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group">
                    <label asp-for="Password" class="control-label" >Password</label>
                    <input asp-for="Password" class="form-control" type="password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group">
                    <label asp-for="UserToReceive" class="control-label" >User to receive (Enter username)</label>
                    <input asp-for="UserToReceive" class="form-control" type="text" id="accn" disabled/>
                    <span asp-validation-for="UserToReceive" class="text-danger"></span>
                </div>
                <br /><br />
                <div class="form-group text-center mt-3">
                    <input type="submit" value="Withdraw" class="btn btn-danger" style="width:100px" id="submitbtn" /> |
                    <a asp-page="/Banking/MainScreen" class="btn btn-outline-dark">Back to Home</a>
                </div>
            </form>
            <hr />
            <br /><br />
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-5 d-lg-flex align-items-lg-center" align="center">
             <img src="~/images/withdrawal.png" class="img-fluid" width="256px" height="256px" id="img"/>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        document.querySelector("#withdraw").onchange = function(){
            if (document.querySelector("#withdraw").checked == true){
                document.querySelector("#accn").value = "";
                document.querySelector("#accn").disabled = true;
                document.querySelector("#submitbtn").value = "Withdraw";
                document.querySelector("#img").src = "../images/withdrawal.png";
            }
        }

        document.querySelector("#transfer").onchange = function(){
            if (document.querySelector("#transfer").checked == true){
                document.querySelector("#accn").disabled = false;
                document.querySelector("#submitbtn").value = "Transfer";
                document.querySelector("#img").src = "../images/transfer.png";
            }
        }
    </script>

}